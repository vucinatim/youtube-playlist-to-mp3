{
  "name": "youtube-mp3-downloader",
  "version": "0.1.0",
  "private": true,
  "main": "electron/dist/main.js",
  "scripts": {
    "dev:next": "next dev",
    "dev:flask": "python backend/app.py",
    "dev": "concurrently \"pnpm:dev:next\" \"pnpm:dev:flask\"",
    "dev:electron": "pnpm build:main && concurrently \"pnpm:watch:main\" \"cross-env ELECTRON_START_URL=http://localhost:3000 electron .\"",
    "watch:main": "tsc -w -p electron/tsconfig.json",
    "dev:desktop": "concurrently \"pnpm:dev:next\" \"pnpm:dev:flask\" \"pnpm:dev:electron\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:main": "tsc -p electron/tsconfig.json",
    "start:electron": "pnpm build:main && electron .",
    "dist:mac": "pnpm build && pnpm build:main && electron-builder --mac dmg"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-collapsible": "^1.1.2",
    "@radix-ui/react-select": "^2.1.4",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.1.1",
    "@tanstack/react-query": "^5.64.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fluent-ffmpeg": "^2.1.3",
    "googleapis": "^144.0.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.473.0",
    "next": "15.1.5",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "slider": "^1.0.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9",
    "eslint-config-next": "15.1.5",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  },
  "build": {
    "appId": "com.ytmp3.downloader",
    "productName": "YT MP3 Downloader",
    "files": [
      "electron/dist/**",
      ".next/standalone/**/*",
      ".next/static/**/*",
      "public/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/dist/main.js"
    },
    "asarUnpack": [
      ".next/**",
      "public/**"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null
    }
  }
}
